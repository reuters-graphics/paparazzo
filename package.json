    "@types/live-server": "^1.2.3",
    "@types/lodash-es": "^4.17.12",
    "@types/mocha": "^10.0.6",
    "@types/mock-fs": "^4.13.4",
    "@types/prompts": "^2.4.9",
    "@types/update-notifier": "^6.0.8",
    "@types/validator": "^13.11.8",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
