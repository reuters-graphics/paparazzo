    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "expect.js": "^0.3.1",
    "lefthook": "^1.5.6",
    "live-server": "1.2.1",
    "mocha": "^10.2.0",
    "mock-fs": "^5.2.0",
    "open": "^10.0.3",
    "portfinder": "^1.0.32",
