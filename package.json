    "puppeteer": "^21.7.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.9.5",
    "rollup-plugin-node-externals": "^6.1.2",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tslib": "^2.6.2",
    "typedoc": "^0.25.7",
    "typedoc-plugin-mermaid": "^1.10.0",
    "typescript": "^5.3.3"
