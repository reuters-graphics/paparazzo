{
  "name": "@reuters-graphics/paparazzo",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "paparazzo": "./dist/cli.js"
  },
  "repository": "https://github.com/reuters-graphics/paparazzo",
  "author": "",
  "license": "MIT",
  "private": false,
  "keywords": [],
  "files": [
    "dist/**/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "c8": {
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "scripts": {
    "serve": "live-server ./test/site/",
    "prepublishOnly": "npm run build",
    "postinstall": "npx playwright install",
    "build": "rollup --config rollup.config.js",
    "docs:build": "typedoc",
    "docs:preview": "live-server ./docs",
    "test": "npm run build && c8 mocha test/*.ts",
    "test:snapshot": "npm run build && GEN_SNAPSHOT=1 c8 mocha test/*.ts"
